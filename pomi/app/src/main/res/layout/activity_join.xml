<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmint" >

    <TextView
        android:id="@+id/textID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="아이디"
        android:textColor="@color/white"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/joinID"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border_layout"
        android:hint="  영문(소문자), 숫자만 포함 6~12자"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textPW"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textID"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="비밀번호"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/joinPW"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/joinID"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_layout"
        android:hint="  영문(소문자), 숫자 포함 8~16자"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/checkPW"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/joinPW"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_layout"
        android:hint="  비밀번호 확인"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textPW"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="이름"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/checkPW"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_layout"
        android:inputType="textPersonName"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textphone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textname"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="전화번호"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_layout"
        android:hint="  010########"
        android:inputType="phone"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/texthint"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textphone"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="비밀번호질문"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_layout"
        android:entries="@array/question"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/texthint"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="비밀번호힌트"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/hint"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/border_layout"
        android:inputType="textPersonName"
        android:textColor="@color/black"/>

    <CheckBox
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/dunggeunmo"
        android:text="개인정보 활용 동의"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/join"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/dunggeunmo"
        android:text="JOIN"
        android:textSize="30sp"
        android:textColor="@color/darkmint" />
</RelativeLayout>